{
	"name": "flow-toggl-plugin",
	"type": "module",
	"version": "0.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/JamesNZL/flow-toggl-plugin.git"
	},
	"scripts": {
		"dev": "tsc --watch -p ./src/tsconfig.json",
		"build": "tsc -p ./src/tsconfig.json",
		"release": "standard-version --sign --commit-all",
		"publish": "git push --follow-tags origin main"
	},
	"standard-version": {
		"scripts": {
			"prerelease": "pnpm update -D"
		},
		"bumpFiles": [
			{
				"filename": "package.json",
				"type": "json"
			},
			{
				"filename": "package-lock.json",
				"type": "json"
			},
			{
				"filename": "plugin.json",
				"type": "json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^18.16.2",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"eslint": "^8.39.0",
		"standard-version": "^9.5.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"winston": "^3.8.2"
	}
}