{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "../dist",
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2021"
  ]
}